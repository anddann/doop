DeclaringClass:Allocation[?heap] = ?type <-
   AssignHeapAllocation(?heap, _, ?inmethod),
   Method:DeclaringType[?inmethod] = ?type,
   !StringConstant(?heap),
   !ClassHeap(?heap).


DeclaringClass:Allocation[?heap] = ?type <-
   ClassHeap(?heap),
   ClassTypeValue(?type, "java.lang.String").

